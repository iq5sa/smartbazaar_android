<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="end|center_vertical">
        <RelativeLayout
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:id="@+id/cartCountAria"


            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/cart_vector"
                android:tint="@android:color/white"
                android:layout_centerHorizontal="true"
                android:scaleType="centerCrop"
                android:layout_marginTop="8dp"
                />


            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/circle_shape_red"
                android:layout_centerHorizontal="true"
                android:text="0"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:id="@+id/tv_cart_count"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="20dp"
            android:id="@+id/favoriteCountAria"

            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_heart"
                android:tint="@android:color/white"
                android:layout_marginTop="10dp"
                />


            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/circle_shape_red"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="0dp"
                android:text="0"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:id="@+id/tv_favorite_count"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_marginEnd="20dp"
            android:id="@+id/shareAria"

            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/share_variant"
                android:tint="@android:color/white"
                android:id="@+id/iv_share"

                />



        </RelativeLayout>
    </LinearLayout>
</LinearLayout>