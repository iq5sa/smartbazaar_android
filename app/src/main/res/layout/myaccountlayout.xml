<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    android:padding="10dp">

    <!--<ImageView-->
        <!--android:layout_width="80dp"-->
        <!--android:layout_height="80dp"-->
        <!--android:src="@drawable/account_circle"-->
        <!--android:tint="@color/colorAccent"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:layout_marginTop="30dp"-->
        <!--android:id="@+id/profile_pic"/>-->


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="معلومات الحساب"
        android:paddingLeft="15dp"
        android:gravity="center"
        android:id="@+id/section_name"
        android:fontFamily="@font/droidkufi_regular"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="18sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/name_area"
        android:background="@drawable/border_corner5"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/section_name">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="الاسم : "
            android:fontFamily="@font/droidkufi_regular"
            android:textColor="@android:color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="سجاد اسعد احمد"
            android:fontFamily="@font/droidkufi_regular"
            android:id="@+id/name"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/name_area"
        android:gravity="center"
        android:id="@+id/mobile_area"
        android:background="@drawable/border_corner5"
        android:padding="10dp"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="رقم الهاتف : "
            android:fontFamily="@font/droidkufi_regular"
            android:textColor="@android:color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="07710541564"
            android:fontFamily="@font/droidkufi_regular"
            android:id="@+id/phone"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/mobile_area"
        android:gravity="center"
        android:id="@+id/email_area"
        android:background="@drawable/border_corner5"
        android:padding="10dp"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" البريد الالكتروني : "
            android:fontFamily="@font/droidkufi_regular"
            android:textColor="@android:color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sajjadiq@masda.com"
            android:fontFamily="@font/droidkufi_regular"
            android:id="@+id/email"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/email_area"
        android:gravity="center"
        android:id="@+id/gender_l"
        android:background="@drawable/border_corner5"
        android:padding="10dp"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" النوع : "
            android:fontFamily="@font/droidkufi_regular"
            android:textColor="@android:color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ذكر"
            android:fontFamily="@font/droidkufi_regular"
            android:id="@+id/gender"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/gender_l"
        android:gravity="center"
        android:id="@+id/area_l"
        android:background="@drawable/border_corner5"
        android:padding="10dp"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" العنوان : "
            android:fontFamily="@font/droidkufi_regular"
            android:textColor="@android:color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="بغداد"
            android:fontFamily="@font/droidkufi_regular"
            android:id="@+id/area"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/area_l"
        >


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/area_l"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/droidkufi_regular"
            android:gravity="center"
            android:text="تسجيل الخروج"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_red_light"
            android:id="@+id/btn_logout"/>
    </LinearLayout>
</RelativeLayout>